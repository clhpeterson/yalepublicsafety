<div class="search">
	<div class="search-inner">
		<div class="titlebar">
			Find Incidents
		</div>
		<div class="form-contents">
			<%= form_tag({controller: "case", action: "search"}, method:"post") do %>
				<div>
				Between <%= select_date @start_date, prefix: :start_date, order: [:month, :day, :year] %>
				and <%= select_date @end_date, prefix: :end_date, order: [:month, :day, :year] %>
				<br />
				Time of incident between 
				<%= select_time @start_time, prefix: :start_time%>
				and
				<%= select_time @end_time, prefix: :end_time %>
				<br />
				Day of the week
				<%= select(:weekday, :day, Case::DAYS) %>
				</div>
				<div>
					<h4>Matching incident type:</h4>
					<div id="any">
						<%= check_box_tag :all, '1', false %><%= label_tag :all, "Any" %>
					</div>
					<div id="columns">
						<div class="column left">
							<ul>
								<%= render "case/inclasses" %>
							</ul>
						</div>
						<div class="column right">
							<ul>
								<%= render "case/intypes" %>
							</ul>
						</div>
					</div>
				</div>
				<div id="submit">
					<%= submit_tag "Search" %>
				</div>
			<% end %>
		</div>
	</div>
</div>