<div class="search">
	<div class="search-inner">
		<div class="titlebar">
			Find Incidents
		</div>
		<div class="form-contents">
			<%= form_tag({controller: "case", action: "search"}, method:"get") do %>
				<div>
				Between <%= select_date Date.today, prefix: :start_date %>
				and <%= select_date Date.today, prefix: :end_date %>
				<br />
				Time of incident between 
				<%= select_time Time.now.change(:hour => 0, :minute => 0), prefix: :start_time %>
				and
				<%= select_time Time.now.change(:hour => 23, :minute => 59), prefix: :end_time %>
				</div>
				<div>
					<h4>Matching incident type:</h4>
					<div id="any">
						<%= check_box_tag :all %><%= label_tag :all, "Any" %>
					</div>
					<div id="columns">
						<div class="column left">
							<ul>
								<%= render "shared/inclasses" %>
							</ul>
						</div>
						<div class="column right">
							<ul>
								<%= render "shared/intypes" %>
							</ul>
						</div>
					</div>
				</div>
				<div class="separator"></div>
				<div id="submit">
					<%= submit_tag "Search" %>
				</div>
			<% end %>
		</div>
	</div>
</div>